<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EtudiantsDispoActivity"
    android:background="@drawable/whitebg2">

    <ImageView
        android:id="@+id/etudiants_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="148dp"
        android:src="@drawable/etudiants"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnetud"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="125dp"
        android:text="Ajouter des etudiants"
        android:backgroundTint="@color/black"/>

    <Spinner
        android:id="@+id/myComboBox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"/>

    <ListView
        android:id="@+id/etudiants_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>


</LinearLayout>